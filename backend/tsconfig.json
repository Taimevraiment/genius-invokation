{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        // "allowImportingTsExtensions": true,
        // "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "removeComments": true,
        "noImplicitAny": false,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "ignoreDeprecations": "5.0",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "outDir": "dist",
        "paths": {
            "socket.io": [
                "./node_modules/socket.io/dist/index"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*",
    ],
    "files": [
        "../typing.d.ts",
    ]
}