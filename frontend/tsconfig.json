{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "skipLibCheck": true,
    "incremental": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "removeComments": true,
    "noImplicitAny": false,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./public/*"
      ],
      "@@@/*": [
        "../common/*"
      ],
      "vuex": [
        "./node_modules/vuex/types"
      ]
    },
    "ignoreDeprecations": "5.0",
    "types": [
      "node",
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/**/*",
  ],
  "files": [
    "./typing.d.ts",
    "../typing.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    }
  ],
}